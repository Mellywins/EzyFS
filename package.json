    "class-validator": "^0.13.2",
    "dotenv": "^10.0.0",
    "eslint-config-airbnb": "^18.2.1",
    "fs": "^0.0.1-security",
    "fstream": "^1.0.12",
    "graphql": "^15.8.0",
    "graphql-passport": "^0.6.4",
